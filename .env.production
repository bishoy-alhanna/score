# Production Environment Variables
# IMPORTANT: Set these values in your production environment
# DO NOT commit actual production values to version control

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=saas_platform
DB_USER=postgres
DB_PASSWORD=SecurePassword123
DATABASE_URL=postgresql://postgres:SecurePassword123@postgres:5432/saas_platform
POSTGRES_USER=postgres
POSTGRES_PASSWORD=SecurePassword123

# Security Keys (MUST be changed in production)
JWT_SECRET_KEY=super-secure-jwt-secret-key-for-production-use-32-chars-minimum
SECRET_KEY=super-secure-secret-key-for-production-use-32-characters-minimum

# Super Admin Configuration
SUPER_ADMIN_USERNAME=superadmin
SUPER_ADMIN_PASSWORD=SuperAdminSecure123!

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# External Services (optional)
SMTP_HOST=your-smtp-server.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@yourdomain.com

# Monitoring and Logging
LOG_LEVEL=error
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Domain Configuration
DOMAIN_NAME=score.al-hanna.com
ADMIN_SUBDOMAIN=admin.score.al-hanna.com
USER_SUBDOMAIN=score.al-hanna.com